{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_total }}">{{ entry_total }}</span></label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_reepay_checkout_total" value="{{ payment_reepay_checkout_total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-total">{{ entry_payment_method_title }}</span></label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_reepay_checkout_method_title" value="{{ payment_reepay_checkout_method_title }}" id="input-method-title" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-total">{{ entry_private_key_live }}</span></label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_reepay_checkout_private_key_live" value="{{ payment_reepay_checkout_private_key_live }}" id="input-private-key-live" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-total">{{ entry_private_key_test }}</span></label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_reepay_checkout_private_key_test" value="{{ payment_reepay_checkout_private_key_test }}" id="input-private-key-test" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_reepay_checkout_order_status_id" id="input-order-status" class="form-control">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == payment_reepay_checkout_order_status_id %}
                                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                    {% else %}
                                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-instant-settle">{{ entry_instant_settle }}</label>
                        <div class="col-sm-10">
                            <select name="payment_reepay_checkout_instant_settle" id="input-instant-settle" class="form-control">
                                {% for option in yes_no_options %}
                                    {% if option.option == payment_reepay_checkout_instant_settle %}
                                        <option value="{{ option.option }}" selected="selected">{{ option.name }}</option>
                                    {% else %}
                                        <option value="{{ option.option }}">{{ option.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-test">{{ entry_test }}</label>
                        <div class="col-sm-10">
                            <select name="payment_reepay_checkout_test" id="input-test" class="form-control">
                                {% for option in yes_no_options %}
                                    {% if option.option == payment_reepay_checkout_test %}
                                        <option value="{{ option.option }}" selected="selected">{{ option.name }}</option>
                                    {% else %}
                                        <option value="{{ option.option }}">{{ option.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-debug-mode">{{ entry_debug_mode_test }}</label>
                        <div class="col-sm-10">
                            <select name="payment_reepay_checkout_debug" id="input-debug-mode" class="form-control">
                                {% for option in yes_no_options %}
                                    {% if option.option == payment_reepay_checkout_debug %}
                                        <option value="{{ option.option }}" selected="selected">{{ option.name }}</option>
                                    {% else %}
                                        <option value="{{ option.option }}">{{ option.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-checkout-type">{{ entry_checkout_type }}</label>
                        <div class="col-sm-10">
                            <select name="payment_reepay_checkout_checkout_type" id="input-checkout_type" class="form-control">
                                {% for payment_type in payment_types %}
                                    {% if payment_type.id == payment_reepay_checkout_checkout_type %}
                                        <option value="{{ payment_type.id }}" selected="selected">{{ payment_type.name }}</option>
                                    {% else %}
                                        <option value="{{ payment_type.id }}">{{ payment_type.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-payment-methods">{{ entry_payment_methods }}</label>
                        <div class="col-sm-10">
                            <select name="payment_reepay_checkout_payment_methods[]" id="input-checkout-payment-methods" class="form-control" multiple>

                                {% for value, name in payment_methods %}
                                    {% if value in payment_methods_selected %}
                                        <option value="{{ value }}" selected>{{ name }}</option>
                                    {% else %}
                                        <option value="{{ value }}" >{{ name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-payment-methods">{{ entry_payment_logos }}</label>
                            <div class="col-sm-10">
                                <select name="payment_reepay_checkout_payment_logos[]" id="input-checkout-payment-methods" class="form-control" multiple>

                                      {% for value, name in payment_methods %}
                                          {% if value != 'card'  %}

                                             {% if value in payment_logos_selected %}
                                                <option value="{{ value }}" selected>{{ name }}</option>
                                             {% else %}
                                                <option value="{{ value }}" >{{ name }}</option>
                                             {% endif %}

                                          {% endif %}

                                      {% endfor %}

                                </select>
                            </div>
                        </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_lines }}</label>
                        <div class="col-sm-10">
                            <select name="payment_reepay_checkout_order_lines" id="input-checkout_type" class="form-control">
                                {% for yes_no_option in yes_no_options %}
                                    {% if yes_no_option.option == payment_reepay_checkout_order_lines %}
                                        <option value="{{ yes_no_option.option }}" selected="selected">{{ yes_no_option.name }}</option>
                                    {% else %}
                                        <option value="{{ yes_no_option.option }}">{{ yes_no_option.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
                        <div class="col-sm-10">
                            <select name="payment_reepay_checkout_geo_zone_id" id="input-geo-zone" class="form-control">
                                <option value="0">{{ text_all_zones }}</option>
                                {% for geo_zone in geo_zones %}
                                    {% if geo_zone.geo_zone_id == payment_reepay_checkout_geo_zone_id %}
                                        <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                                    {% else %}
                                        <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_reepay_checkout_status" id="input-status" class="form-control">
                                {% if payment_reepay_checkout_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_reepay_checkout_sort_order" value="{{ payment_reepay_checkout_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}